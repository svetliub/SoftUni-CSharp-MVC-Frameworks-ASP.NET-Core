@model UserDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="row">
    <div class="col-2">
        <img src="@Model.AvatarUrl" style="max-width:110px; border-radius: 50%" />
    </div>
    <div class="col-10">
        <div class="card" style="width: 34rem; justify-content:center">
            <div class="card-body">
                <h5><strong>Username: </strong>@Model.UserName</h5>
                <p><strong>Email: </strong>@Model.Email</p>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
        <h5>Posts:</h5>
        <div class="card" style="width: 34rem; justify-content:center">
            <div class="card-body">
                <ul>
                    @foreach (var post in Model.Posts)
                    {
                        <li>@post.PublishDateTime - @post.Content</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-10 row justify-content-center">
        <ul class="nav navbar-expand-lg navbar-light d-flex justify-content-center">
            <li class="nav-item">
                <div style="padding:2px">
                    <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <div><button type="submit" id="send" class="btn btn-outline-danger">Delete User</button></div>
                    </form>
                </div>
            </li>
            <li class="nav-item">
                <div style="padding:2px">
                    <a class="btn btn btn-outline-info" asp-area="Admin" asp-controller="Users" asp-action="Index">Cancel</a>
                </div>
            </li>
        </ul>
    </div>
</div>
