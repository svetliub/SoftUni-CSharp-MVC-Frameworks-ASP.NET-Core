@model PaginatedList<ArticleConciseViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">All Articles</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th colspan="3" style="text-align:center; background-color:#cccccc">Articles</th>
        </tr>
        <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @Html.DisplayForModel()
    </tbody>
</table>

<partial name="_Pagination" />