@model UserConciseViewModel

<div class="col-md-6 d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.AvatarUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.UserName</h5>
            <p class="card-text"><strong>Personal info: </strong>Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Email: </strong>@Model.Email</li>
        </ul>
        <div class="card-body">
            <a asp-controller="Home" asp-action="ArticlesBy" asp-route-id="@Model.UserName" class="card-link">Articles</a>
            <a asp-controller="Home" asp-action="VideosBy" asp-route-id="@Model.UserName" class="card-link">Videos</a>
        </div>
    </div>
</div>